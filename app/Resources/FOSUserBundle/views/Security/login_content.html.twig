<!-- CSS PERSO -->
<link rel="stylesheet" href="{{ asset('css/login.css') }}" > 
   
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
      <div class = "alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="row">
{{ include("CoursBundle:Cours:alertesFlash.html.twig") }}

<div class="login-form">
     <h1 id="h1login">Connexion</h1>
     <form action="{{ path("fos_user_security_check") }}" method="post">
         {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
         {% endif %}
       <div class="form-group ">
            <input type="text" class="form-control" placeholder="Adresse mail" id="username" name="_username">
            <i class="fa fa-envelope"></i>
       </div>
       <div class="form-group log-status">
            <input type="password" class="form-control" placeholder="Mot de passe" id="password" name="_password" required="required">
            <i class="fa fa-lock"></i>
       </div>
            <a class="link" href="#">Mot de passe oubli√© ?</a>
       <input type="submit" class="log-btn" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
  
    </form>
</div>
</div>

<style>
    body {
        position:inherit;
    }
</style>