{% trans_default_domain 'FOSUserBundle' %}



<section id="main-content" style="margin-left:250px">
    <div class="container-fluid ctn-body">
        <div class = "row">
            <div class = "col-md-12">
                <h3>Modifier son profil</h3><hr>
            </div>
            <div class = "col-md-3 col-sm-5 col-lg-3 col-xs-10">
                {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                    {{ form_widget(form) }}
                    <div>
                        <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-default" id="btnModifMDP" />
                    </div>
                {{ form_end(form) }}
                {{ include("CoursBundle:Cours:alertesFlash.html.twig") }}
            </div>
        </div>
    </div>
</section>

<style>
   #btnModifMDP {
      margin-left:inherit; 
   } 
</style>