{% extends "::vueMere.html.twig" %} {#La vue fille 1 hérite de la vue mère #}
{% block contenuCentral %}
    
<!-- CSS PERSO -->
<link rel="stylesheet" href="style.css" type="text/css">
<div class="container ctn-body">
    <h4 id="soustitres">Rechercher un cours</h4><hr>
    <!-- Formulaire recherche de cours -->
    <form class="form-horizontal" method="post" action="{{ path('rechercherCours_resultat') }}">

        <!-- Formation -->
        <div class="form-group">
            <!-- Label formation -->
            <label for="inputFormation" class="col-sm-2 control-label">Formation</label>
            <!-- Liste déroulante formation -->
            <div class="col-sm-4">
                <select class="form-control" name="formation" id="formation">
                    {% for formationCourant in liste_formation %}
                        <option>{{ formationCourant.nom }}</option>
                    {% endfor %}>
                </select>
            </div>
            <!-- Lien vers toutes les formations -->
            <!--<div class="col-sm-3">
                <a href="#" target="frameName">Voir toutes les formations</a>
            </div>-->
        </div>
         
        <!-- Année d'étude -->
        <div class="form-group" >
            <!-- Label année d'étude -->
            <label for="inputAnnee" class="col-sm-2 control-label">Année d'étude</label>
            <!-- Liste déroulante année d'étude -->
            <div class="col-sm-4">
                <select class="form-control" name="anneeEtude">
                    {% for anneeEtudeCourant in liste_anneeEtude %}
                        <option>{{ anneeEtudeCourant.nom }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
         
        <!-- Module -->
        <div class="form-group">
            <!-- Label module --> 
            <label for="inputModule" class="col-sm-2 control-label">Module</label>
            <!-- Liste déroulante module -->
            <div class="col-sm-4">
                <select class="form-control" name="module">
                    {% for moduleCourant in liste_module %}
                        <option>{{ moduleCourant.nom }}</option>
                    {% endfor %}
                </select>
            </div>
            <!-- Lien vers tous les modules -->
            <!--<div class="col-sm-3">
                <a href="#" target="frameName">Voir tous les modules</a>
            </div>-->
        </div>
        
        <!-- Date -->
        <div class="form-group">
                <label class="col-sm-2 control-label">Date du cours</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control" id="date" value="" name="date">
                </div>
        </div>
        
        <!-- Bouton rechercher -->
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
               <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
        </div>
    </form>
</div>
<footer style="background-color:#EEEEEE" >
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <span class="copyright"><strong>Copyright &copy; UPPA Soutien 2017</strong></span>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <ul class="list-inline quicklinks">
                    <li class="list-inline-item"><a href="#"><strong>Politique de confidentialité</strong></a>
                    </li>
                    <li class="list-inline-item"><a href="{{ path('about') }}"><strong>À propos</strong></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>
<style>
    footer {
    position:fixed;
    bottom:0; }
</style>
{% block javascripts %}
    <script>
        // Date du cours = date du jour
        Date.prototype.toDateInputValue = (function() 
        {
            var local = new Date(this);
            local.setMinutes(this.getMinutes() - this.getTimezoneOffset());
            return local.toJSON().slice(0,10);
        });
        $(document).ready( function() 
        {
            $('#date').val(new Date().toDateInputValue());
        });
        document.getElementById('date').value = new Date().toDateInputValue();
    </script>
{% endblock %}
{% endblock %}